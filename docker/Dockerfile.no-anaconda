# See: https://thelinuxcluster.com/2019/12/17/compile-gdal-2-4-3-on-centos-7/
#RUN yum install -y --nogpgcheck https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm && \
