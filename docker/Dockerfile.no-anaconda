#    yum install -y --nogpgcheck \
#        geos \
#        proj


# Install tsdat python dependencies
RUN pip install \
    act-atmos \
    cfunits \
    yamllint \
    boto3
    #cartopy


# Add tsdat package
COPY tsdat ${LAMBDA_DIR}

# Set working directory when container is started
WORKDIR ${LAMBDA_DIR}



